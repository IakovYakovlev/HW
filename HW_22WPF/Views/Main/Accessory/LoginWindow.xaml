<Window x:Class="HW_22WPF.Views.Main.Accessory.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HW_22WPF.Views.Main.Accessory"
        mc:Ignorable="d"
        DataContext="{Binding RelativeSource={RelativeSource Self}}"
        Title="Вход" Height="250" Width="300" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <Label Content="Вход" FontSize="25" HorizontalAlignment="Center" Margin="0,0,0,9" />
            <Label Content="Электронная почта :" Margin="0,0,0,0"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,0" />
            <Label Content="Пароль :" Margin="0,2,0,0" />
            <PasswordBox x:Name="txtPassword" Margin="0,0,0,0"/>
            <StackPanel Orientation="Horizontal" Margin="0,10,0,0" HorizontalAlignment="Center">
                <Button x:Name="btnLogin" Content="Войти" Margin="0,0,9,0" Click="btnLogin_Click"/>
                <Button x:Name="btnClose" Content="Отмена" Click="btnClose_Click" />
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
