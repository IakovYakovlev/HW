@model IEnumerable<Users>
@{
	ViewBag.Title = "Пользователи";
	Layout = "_Layout";
}

<div class="m-1 p-1">
	<table class="table table-bordered table-striped">
		<thead>
			<tr><th>Номер</th><th>Электронная почта</th></tr>
		</thead>
		<tbody>
			@if(Model == null || Model.Count() == 0)
			{
				<tr><td colspan="3" class="text-center">Нет данных</td></tr>
			}
			else
			{
				@foreach(var p in Model)
				{
					<tr>
						<td>@p.Id</td>
						<td>@p.Email</td>
						<td>
							<form asp-action="Delete" method="post">
								<input type="hidden" name="id" value="@p.Id" />
								<button class="btn btn-danger">Удалить</button>
							</form>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
	<div class="mb-1 fixed-bottom">
		<div class="shadow-lg rounded">
			<a asp-action="Register" class="btn align-self-center btn-primary ms-2 mb-1">Добавить</a>
		</div>
	</div>
</div>